@import colors
@import prefixes
@import 'components/triangle'

.ig
  @import basics
.ig
  .dotchart
    float left
    width 100%
    padding 0px
    padding-top 10px
    padding-left 40px
    .year
      float left
      width 100%
      height 10px
      position relative
      .dot
        position absolute
        top 2px
        width 6px
        height @width
        border-radius 50%
        background ColorBlue
      .dot-bg
        position absolute
        top 2px
        height 6px
        background lighten(ColorBlue, 90%)
        right 0px
      .label-year
        position absolute
        top -3px
        left (@padding-left * -1)
        font-size 12px
        opacity 0
      &:first-child .label-year
      &:last-child .label-year
        opacity 1
    &:hover
      .year .label-year
        opacity 0
      .year:hover
        background lighten(ColorBlue, 99%)
        .label-year
          opacity 1

